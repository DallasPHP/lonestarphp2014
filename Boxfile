web1:
  php_error_log: true
  document_root: /public
  php_version: 5.4.14
  php_extensions:
    - intl
    - zip
    - mysql
    - pdo_mysql
  shared_writable_dirs:
   - tmp/cache
  after_build:
    - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; php composer.phar install --no-dev"
    - "rm -rf tmp/cache/*"